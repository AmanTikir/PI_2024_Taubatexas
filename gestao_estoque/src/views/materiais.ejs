<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Materiais</title>
    <!-- Adicionando Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        /* Estilo para mudar a cor de fundo das linhas da tabela ao passar o mouse */
        tbody tr:hover {
            background-color: #f5f5f5; /* Cor de fundo quando o mouse está sobre a linha */
        }
        /* Estilo para alterar a cor de fundo da linha quando selecionada */
        .selecionado {
            background-color: #5298e4; /* Cor de fundo quando a linha é selecionada */
        }
        /* Margem esquerda para o botão Pesquisar */
        #pesquisarBtn {
            margin-left: 10px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="mt-5 mb-4">Materiais</h1>

        <!-- Formulário para filtrar por categoria e pesquisar -->
        <form id="filtroForm" class="mb-3">
            <div class="row">
                <div class="col-md-4">
                    <label for="categoriaSelect">Filtrar por Categoria:</label>
                    <select id="categoriaSelect" class="form-control">
                        <option value="">Todas as Categorias</option>
                    </select>
                </div>
                <div class="col-md-5">
                    <label for="pesquisaInput">Pesquisar:</label>
                    <div class="input-group">
                        <input type="text" id="pesquisaInput" class="form-control" placeholder="Digite o termo de pesquisa">
                        <div class="input-group-append">
                            <button type="button" id="pesquisarBtn" class="btn btn-primary" onclick="filtrarPorCategoria()">Pesquisar</button>
                        </div>
                    </div>
                </div>
            </div>
        </form>

        <!-- Tabela de Materiais -->
        <table id="materiaisTable" class="table">
            <thead class="thead-dark">
                <tr>
                    <th>ID</th>
                    <th>Descrição</th>
                    <th>Unidade de Medida</th>
                    <th>Quantidade</th>
                    <th>Categoria</th>
                </tr>
            </thead>
            <tbody>
                <% materiais.forEach(material => { %>
                    <tr onclick="selecionarMaterial(this)">
                        <td><%= material.id_material %></td>
                        <td><%= material.descricao_material %></td>
                        <td><%= material.unid_medida_material %></td>
                        <td><%= material.quantidade_material %></td>
                        <td><%= material.categoria.descricao_categoria %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>

        <button type="button" class="btn btn-primary">Selecionar</button>
        
    </div>

    

    <!-- Adicionando Bootstrap JS e jQuery (necessário para funcionalidades do Bootstrap) -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <script>
        // Carregar categorias ao carregar a página
        window.onload = async function () {
            const response = await fetch('/categorias');
            const categorias = await response.json();

            const categoriaSelect = document.getElementById('categoriaSelect');
            categorias.forEach(categoria => {
                const option = document.createElement('option');
                option.value = categoria.id_categoria;
                option.textContent = categoria.descricao_categoria;
                categoriaSelect.appendChild(option);
            });
        };

        // Função para selecionar material
        function selecionarMaterial(linha) {
            const linhas = document.querySelectorAll('#materiaisTable tbody tr');
            linhas.forEach(linha => {
                linha.classList.remove('selecionado');
            });
            linha.classList.add('selecionado');
        }

        // Função para filtrar materiais por categoria
        function filtrarPorCategoria() {
            const categoriaSelect = document.getElementById('categoriaSelect');
            const categoriaSelecionada = categoriaSelect.value;

            // Esconder todas as linhas da tabela
            const linhas = document.querySelectorAll('#materiaisTable tbody tr');
            linhas.forEach(linha => {
                linha.style.display = 'none';
            });

            // Mostrar apenas as linhas com a categoria selecionada
            const linhasFiltradas = document.querySelectorAll(`#materiaisTable tbody tr td:nth-child(5):not(:empty):not(:first-child):not(:contains("${categoriaSelecionada}"))`);
            linhasFiltradas.forEach(linha => {
                linha.parentElement.style.display = '';
            });
        }
    </script>
</body>
</html>
